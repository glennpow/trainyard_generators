<%% title t(:edit_object, :object => t(:<%= singular_name %>)) %>

<%% form_for :<%= singular_name %>, :url => object_path, :html => { :method => :put } do |f| %>
  <%%= render :partial => 'edit', :locals => { :f => f, :<%= singular_name %> => @<%= singular_name %> } %>

  <%%= f.submit_with_cancel(:submit => t(:save)) %>
<%% end %>
